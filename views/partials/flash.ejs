<% if(flash && flash.message) { %>
  <div class="alert alert-<%=flash.type%> text-center" role="alert">
   <% if( Array.isArray(flash.message) ) { %>
     <ul>
      <% flash.message.forEach(function(msg) {%>
        <li><%= msg %></li>
      <% }) %>
     </ul>
    <% } else { %>
      <%= flash.message %>
    <% } %>
  </div>
<% } %>
